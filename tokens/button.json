{
    "button": {
        "attributes": { "ignore": true },
        "shape": { "type": "border-radius", "value": 4 },
        "x-space-sm": { "type": "spacing", "value": 12 },
        "x-space-md": { "type": "spacing", "value": 16 },
        "x-space-lg": { "type": "spacing", "value": 24 },
        "icon-size-sm": { "type": "sizing", "value": 20 },
        "icon-size-md": { "type": "sizing", "value": 24 },
        "icon-size-lg": { "type": "sizing", "value": 24 },
        "hover-container-opacity": { "type": "opacity", "value": 1 },
        "disabled-container-opacity": { "type": "opacity", "value": 1 },
        "pressed-container-opacity": { "type": "opacity", "value": 1 },
        "hover-container-elevation": { "type": "elevation", "value": 1 },

        "filled-button": {
            "attributes": {"root": "md"},
            "container-shape": { "value": "{button.shape.value}" },
            "icon-size": { "value": "{button.icon-size-md.value}" },
            "disabled-container-opacity": { "value": "{button.disabled-container-opacity.value}" },
            "hover-container-elevation": { "value": "{button.hover-container-elevation.value}" },
            "hover-state-layer-opacity": { "value": "{button.hover-container-opacity.value}" },
            "pressed-state-layer-opacity": { "value": "{button.pressed-container-opacity.value}" },
    
            "primary": {
                "container-color": { "value": "{palette.primary.40}" },
                "hover-state-layer-color": { "value": "{palette.primary.30}" },
                "pressed-state-layer-color": { "value": "{palette.primary.20}" }
            },
            "secondary": {
                "container-color": { "value": "{palette.secondary.50}" },
                "hover-state-layer-color": { "value": "{palette.secondary.70}" },
                "pressed-state-layer-color": { "value": "{palette.secondary.40}" }
            },
            "tertiary": {
                "container-color": { "value": "{palette.tertiary.40}" },
                "hover-state-layer-color": { "value": "{palette.tertiary.30}" },
                "pressed-state-layer-color": { "value": "{palette.tertiary.20}" }
            },
            "neutral": {
                "container-color": { "value": "{palette.neutral.95}" },
                "hover-state-layer-color": { "value": "{palette.neutral.80}" },
                "pressed-state-layer-color": { "value": "{palette.neutral.20}" },
                "hover-label-text-color": { "value": "{palette.neutral-variant.0}" }
            },
            "info": {
                "container-color": { "value": "{palette.info.70}" },
                "hover-state-layer-color": { "value": "{palette.info.60}" },
                "pressed-state-layer-color": { "value": "{palette.info.80}" },
                "label-text-color": { "value": "{palette.info.10}" }
            },
            "error": {
                "container-color": { "value": "{palette.error.40}" },
                "hover-state-layer-color": { "value": "{palette.error.50}" },
                "pressed-state-layer-color": { "value": "{palette.error.30}" }
            }
        }
    }
}
  